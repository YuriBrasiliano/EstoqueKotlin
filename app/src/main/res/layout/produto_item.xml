<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ftProduto"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/nomeProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome do Produto"
        android:textSize="15sp"
        android:gravity="center"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="140dp"
        app:layout_constraintStart_toEndOf="@id/ftProduto"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        />
    <TextView
        android:id="@+id/descProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Localização do Produto"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/nomeProduto"
        app:layout_constraintStart_toEndOf="@id/ftProduto"
        android:layout_marginStart="140dp"

        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:maxLines="4"
        />
    <TextView
        android:id="@+id/quantProduto"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Quantidade Solicitada"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/descProduto"
        app:layout_constraintStart_toEndOf="@id/ftProduto"
        />

</androidx.constraintlayout.widget.ConstraintLayout>